{
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 4,
  "modules-left": ["group/hypr", "custom/media", "mpd"],
  "modules-center": ["idle_inhibitor", "clock", "power-profiles-daemon"],
  "modules-right": ["group/scripts", "group/hardware", "group/main"],

  "group/hypr": {
    "orientation": "horizontal",
    "modules": ["hyprland/workspaces", "hyprland/window", "hyprland/mode"]
  },
  "group/main": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "tray", "network", "battery", "custom/power"]
  },
  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "memory",
      "temperature",
      "cpu",
      "custom/temperature_gpu",
      "custom/gpu"
    ]
  },
  "group/scripts": {
    "orientation": "horizontal",
    "modules": ["custom/reboot-bios", "custom/nixos-clean"]
  },

  "hyprland/workspaces": {
    "active-only": false,
    "all-outputs": false,
    "format": "{icon}",
    "format-icons": {
      "active": "ï†’",
      "default": "ï„‘"
    }
  },
  "hyprland/window": {
    "separate-outputs": true,
    "rewrite": {
      "(^.{,25}) - (.*)": "$2",
      "(^.{0,25})(.*) - (.*)": "$3",
      "(.*)VSCod(.*)": "Code"
    }
  },
  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ï†¼",
      "default": "ğŸœ"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/modules/mediaplayer.py 2> /dev/null"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ï®",
      "deactivated": "ï°"
    }
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": false,
    "format-icons": {
      "default": "ïƒ§",
      "performance": "ïƒ§",
      "balanced": "ï‰",
      "power-saver": "ï¬"
    }
  },
  "custom/reboot-bios": {
    "format": "&#9965;",
    "return-type": "",
    "on-click": "systemctl reboot --firmware-setup",
    "tooltip": false
  },
  "custom/nixos-clean": {
    "format": "&#9851;",
    "return-type": "",
    "on-click": "kitty -e sudo nix-collect-garbage -d && nixos-rebuild boot",
    "tooltip": false
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) â¸¨{songPosition}|{queueLength}â¸© {volume}% ï€",
    "format-disconnected": "Disconnected ï€",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ï€",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": "ïƒ„ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ï´</span> ",
      "on": "ï´ "
    },
    "repeat-icons": {
      "on": "ï€ "
    },
    "single-icons": {
      "on": "ï€1 "
    },
    "state-icons": {
      "paused": "ïŒ",
      "playing": "ï‹"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "pulseaudio": {
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
    "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
    "format-muted": "ïš© {format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ï–",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": ["ï€¦", "ï€§", "ï€¨"]
    },
    "on-click": "pavucontrol",
    "tooltip": false
  },
  "memory": {
    "format": "{}% ïƒ‰",
    "tooltip": false
  },
  "temperature": {
    "thermal-zone": 5,
    "critical-threshold": 90,
    "format": "{temperatureC}Â°C",
    "format-icons": ["ï«", "ï‹‰", "ï©"],
    "tooltip": false
  },
  "cpu": {
    "format": "{usage}% ï‹›",
    "tooltip": false,
    "on-click": "kitty -e htop"
  },
  "custom/temperature_gpu": {
    "format": "{}Â°C",
    "interval": 1,
    "return-type": "",
    "exec": "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader",
    "tooltip": false
  },
  "custom/gpu": {
    "format": "{}% &#9974;",
    "interval": 1,
    "return-type": "",
    "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader | sed 's/%//'",
    "tooltip": false,
    "on-click": "kitty -e watch -n1 nvidia-smi"
  },
  "network": {
    "format-wifi": "{signalStrength}% ï‡«",
    "format-ethernet": "ï–",
    "tooltip-format": "{ifname} via {gwaddr} ï–",
    "format-linked": "{ifname} (No IP) ï–",
    "format-disconnected": "âš ",
    "tooltip": false
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ï—§",
    "format-plugged": "{capacity}% ï‡¦",
    "format-alt": "{time} {icon}",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
    "tooltip": false
  },
  "tray": {
    "spacing": 10,
    "tooltip": false,
    "reverse-direction": true,
    "expand": true
  },
  "custom/power": {
    "format": "â»",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/modules/power_menu.xml",
    "menu-actions": {
      "shutdown": "shutdown -h now",
      "reboot": "reboot",
      "suspend": "systemctl suspend"
    }
  }
}
